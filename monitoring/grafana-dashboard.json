{
  "dashboard": {
    "title": "Anchor - Financial Accountability System",
    "tags": ["anchor", "production"],
    "timezone": "browser",
    "panels": [
      {
        "title": "API Health",
        "type": "stat",
        "targets": [
          {
            "expr": "up{job=\"anchor-api\"}",
            "legendFormat": "API Status"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "steps": [
                { "value": 0, "color": "red" },
                { "value": 1, "color": "green" }
              ]
            }
          }
        }
      },
      {
        "title": "Request Rate (req/s)",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(http_requests_total[5m])",
            "legendFormat": "{{method}} {{path}}"
          }
        ]
      },
      {
        "title": "Error Rate (%)",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(http_requests_total{status=~\"5..\"}[5m]) / rate(http_requests_total[5m]) * 100",
            "legendFormat": "5xx Errors"
          }
        ]
      },
      {
        "title": "Response Time (p95)",
        "type": "graph",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(http_request_duration_seconds_bucket[5m]))",
            "legendFormat": "95th Percentile"
          }
        ]
      },
      {
        "title": "Webhook Events",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(webhook_received_total[5m])",
            "legendFormat": "Webhooks/sec"
          }
        ]
      },
      {
        "title": "Interventions",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(interventions_total[5m])",
            "legendFormat": "Total"
          },
          {
            "expr": "rate(interventions_completed_total[5m])",
            "legendFormat": "Completed"
          },
          {
            "expr": "rate(interventions_failed_total[5m])",
            "legendFormat": "Failed"
          }
        ]
      },
      {
        "title": "AI API Calls",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(anthropic_api_calls_total[5m])",
            "legendFormat": "Total Calls"
          },
          {
            "expr": "rate(anthropic_api_errors_total[5m])",
            "legendFormat": "Errors"
          }
        ]
      },
      {
        "title": "Database Performance",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(pg_stat_database_tup_fetched[5m])",
            "legendFormat": "Rows Fetched"
          },
          {
            "expr": "rate(pg_stat_database_tup_inserted[5m])",
            "legendFormat": "Rows Inserted"
          }
        ]
      },
      {
        "title": "Memory Usage",
        "type": "graph",
        "targets": [
          {
            "expr": "(node_memory_MemTotal_bytes - node_memory_MemAvailable_bytes) / node_memory_MemTotal_bytes * 100",
            "legendFormat": "Memory %"
          }
        ]
      },
      {
        "title": "Disk Usage",
        "type": "graph",
        "targets": [
          {
            "expr": "(node_filesystem_size_bytes - node_filesystem_avail_bytes) / node_filesystem_size_bytes * 100",
            "legendFormat": "Disk %"
          }
        ]
      }
    ],
    "refresh": "30s",
    "time": {
      "from": "now-6h",
      "to": "now"
    }
  }
}
